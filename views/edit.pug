extends loggedinLayout 

block logged-content
block head-block
    link(rel="stylesheet" href="edit.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    body 
        div.layoutspace
            div(class="container")
                div(class="leftbox")
                    nav(class="navbar2") 
                        a(href="/profile" class="overview")
                            i(class="fa fa-user")
                        a(href="/edit" id="editID" class="edit")
                            i(class="fa-solid fa-pencil")
                        a(href="/delete" class="delete")
                            i(class="fa-solid fa-user-xmark")
                        a(href="/" class="signout")
                            i(class="fa-solid fa-right-from-bracket")
                div(class="rightbox")
                    div(class="profile")
                        h1 Edit Account
                            form(id='form' method="post" action="/editprof")
                                div.editLeft
                                    div.space
                                    h2 Username
                                        text 
                                    input(type='text' name='username' value=usernameVal )
                                    div.space
                                    h2 Password
                                        text 
                                    input(type='text' name='password'  value=passVal)
                                    div.space
                                    h2 Email
                                        text 
                                    input(type='text' name='email'   value=emailVal)
                                    div.space
                                    h2 Age
                                        text 
                                    input(type='number' name='age' value=ageVal )
                                div.editRight
                                    h2 Favorite Pony?
                                        text(id='q1')
                                    div.dropdown
                                        select
                                            option(value='twilight' id=op1)
                                                | Twilight Sparkle
                                            option(value='applejack' id=op2)
                                                | Applejack
                                            option(value='raindbow' id=op3)
                                                | Rainbow Dash
                                            option(value='rarity' id=op4)
                                                | Rarity
                                            option(value='flutter' id=op5)
                                                | Fluttershy
                                            option(value='pinkie' id=op6)
                                                | Pinkie Pie
                                    div(class="space")
                                    h2 Favorite Cutie Mark?
                                        text(id='q2')
                                    div.dropdown
                                        select
                                            option(value='twilight')
                                                | Twilight Sparkle's
                                            option(value='applejack')
                                                | Applejack's
                                            option(value='raindbow')
                                                | Rainbow Dash's
                                            option(value='rarity')
                                                | Rarity's
                                            option(value='flutter')
                                                | Fluttershy's
                                            option(value='pinkie')
                                                | Pinkie Pie's
                                    div(class="space")
                                    h2  Who would win? Twilight Sparkle or Goku?
                                        text(id='q3')
                                    div.dropdown
                                        select
                                            option(value='twilight')
                                                | Twilight Sparkle
                                            option(value='goku')
                                                | Goku
                                input(class='editBtn' type='submit' value='Update Account')