        div.container
            form(id='form' method="post" action="/loggedin")
                p Username: 
                    p
                        input(type='text' name='username') 
                p Password: 
                    p
                        input(type='text' name='password')
                p Email: 
                    p
                        input(type='text' name='email')
                p Age: 
                    p
                        input(type='text' name='age')
